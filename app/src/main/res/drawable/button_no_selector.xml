<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="0dp" />
            <gradient
                android:endColor="@color/buttonNoPressed"
                android:startColor="@color/buttonNoPressed"
                android:angle="270"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners
                android:radius="0dp" />
            <gradient
                android:endColor="@color/buttonNoNormal"
                android:startColor="@color/buttonNoNormal"
                android:angle="270"/>
        </shape>
    </item>
</selector>